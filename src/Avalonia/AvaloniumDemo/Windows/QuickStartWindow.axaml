<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonium="clr-namespace:Avalonium;assembly=Avalonium"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniumDemo.Windows.QuickStartWindow"

        Title="Quick Start Window" Height="341" Width="617">


    <avalonium:TabsControl Margin="8">

        <TabItem Header="Tab No. 1" IsSelected="True">
            <Grid Background="{DynamicResource SelectedTabItemBackgroundBrush}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    Tab No. 1
                </TextBlock>
            </Grid>
        </TabItem>

        <TabItem Header="Tab No. 2">
            <Grid Background="{DynamicResource SelectedTabItemBackgroundBrush}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    Tab No. 2
                </TextBlock>
            </Grid>

        </TabItem>

        <TabItem>
            <!-- with context menu -->
            <TabItem.Header>
                <Grid>
                    <Grid.ContextMenu>
                        <ContextMenu>
                            <MenuItem />
                        </ContextMenu>
                    </Grid.ContextMenu>
                    <TextBlock>Tab No. 3</TextBlock>
                </Grid>
            </TabItem.Header>
            <Grid Background="{DynamicResource SelectedTabItemBackgroundBrush}">
                <TextBlock Background="{DynamicResource SelectedTabItemBackgroundBrush}"
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                    Tab No. 3
                </TextBlock>
            </Grid>

        </TabItem>
        <TabItem Header="Tab No. 4">
            <Grid Background="{DynamicResource SelectedTabItemBackgroundBrush}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    Tab No. 4
                </TextBlock>
            </Grid>

        </TabItem>
        <TabItem Header="Tab No. 5">
            <Grid Background="{DynamicResource SelectedTabItemBackgroundBrush}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    Tab No. 5
                </TextBlock>
            </Grid>

        </TabItem>
        <TabItem Header="Tab No. 6">
            <Grid Background="{DynamicResource SelectedTabItemBackgroundBrush}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    Tab No. 6
                </TextBlock>
            </Grid>

        </TabItem>
    </avalonium:TabsControl>

</Window>